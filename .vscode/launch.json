{
    "configurations": [
        {
            "name": "(Debug) Flask APP",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "microblog.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--debugger",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "(PROD-like) Flask APP",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "microblog.py",
            },
            "args": [
                "run",
            ],
            "jinja": true,
            "justMyCode": true
        }
    ]
}
